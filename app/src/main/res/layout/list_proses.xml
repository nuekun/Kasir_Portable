<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootListProses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:baselineAligned="false"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="17dp">

            <TextView
                android:id="@+id/txtListProsesNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/lblListProsetKet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:text="Harga"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtListProsesKet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="17dp"
                    android:text="RP.123.123"
                    android:textColor="@color/whiteText"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnListProsesHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transprant"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_delete_black_24dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rootListProsesJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txtListProsesJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x21"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>